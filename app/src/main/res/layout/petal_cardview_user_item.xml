<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/card_spacing_default_half"
    android:layout_marginRight="@dimen/card_spacing_default_half"
    android:layout_marginTop="@dimen/text_spacing_default"
    app:cardCornerRadius="@dimen/card_radius_default"
    app:elevation="@dimen/card_elevation_static"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:background="?selectableItemBackground"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/img_petal_user"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/txt_image_user"
            style="@style/text_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_image_about"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txt_image_about"
            android:layout_toLeftOf="@+id/ibtn_image_user_chevron_right"
            android:layout_toStartOf="@+id/ibtn_image_user_chevron_right"
            android:paddingLeft="@dimen/text_spacing_default"
            android:paddingRight="@dimen/text_spacing_default"
            tools:text="用户名" />

        <TextView
            android:id="@+id/txt_image_about"
            style="@style/text_image_detail_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_image_user"
            android:layout_toEndOf="@+id/txt_image_user"
            android:layout_toRightOf="@+id/txt_image_user"
            android:paddingLeft="@dimen/text_spacing_default"
            android:paddingRight="@dimen/text_spacing_default"
            tools:text="用户有有关信息" />

        <ImageButton
            android:id="@+id/ibtn_image_user_chevron_right"
            android:layout_width="@dimen/user_head_circle_size"
            android:layout_height="@dimen/user_head_circle_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent" />

    </RelativeLayout>

</android.support.v7.widget.CardView>